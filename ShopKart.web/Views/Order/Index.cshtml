@model IEnumerable<ShopKart.web.Order_Table>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Order List</title>
    <h1>
    Order List
</h1>

    <style>

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #bcc5fb;
        }

        th {
            background-color: #0026ff;
            color: white;
        }

        tr:hover {
            background-color: #58a4ed;
        }
    </style>
</head>
<body style="background-color:#f3ebf6;">
    
        <h3>
        @Html.ActionLink("Create New", "Create")
        </h3>
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Total_Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Total_Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
